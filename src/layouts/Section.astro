---
interface Props {
  id: string
  title: string
}

const { id, title } = Astro.props
---

<section id={id} class="scroll-my-24 mt-36">
  <header>
    <h2 class="text-[28px] leading-[34px] flex items-center gap-x-3 font-medium text-neutral-200">
      <slot name="icon" />
      {title}
    </h2>
  </header>
  <slot />
</section>
