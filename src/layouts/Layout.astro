---
import Nav from '@/components/Nav.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Franco Lloveras web programmer porfolio." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex gap-y-20 items-center flex-col w-full bg-neutral-900 text-neutral-200">
    <Nav />
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Rubik';
    src: url('/fonts/rubik.ttf') format('truetype');
  }

  body {
    font-family: 'Rubik', sans-serif;
  }
</style>
