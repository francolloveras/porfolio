---
import Nav from '@/components/Nav.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Franco Lloveras web programmer porfolio." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="space-y-20 bg-neutral-900 text-neutral-200">
    <Nav />
    <div class="max-w-3xl space-y-32 mx-auto">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Rubik';
    src: url('/fonts/rubik.ttf') format('truetype');
  }

  :root {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Rubik', sans-serif;
  }
</style>
